@model pointage.Model.events
@{ 
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="title">Update Events</div>
<div class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.event_id)
        <div class="user-details">
            <div class="input-box">
                <span class="details">Events Name</span>
                @Html.EditorFor(model => model.event_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Events Name" } })
                @Html.ValidationMessageFor(model => model.event_name, "", new { @class = "text-danger" })
            </div>
            <div class="input-box">
                <span class="details">Start Date</span>
                @*@Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.EditorFor(model => model.start_date, new { htmlAttributes = new { @Value = @Model.start_date.Value.Date.ToString("yyyy-MM-dd"), @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.start_date, "", new { @class = "text-danger" })
            </div>
            <div class="input-box">
                <span class="details">End Date</span>
                @Html.EditorFor(model => model.expiry_date, new { htmlAttributes = new { @Value = @Model.expiry_date.Value.Date.ToString("yyyy-MM-dd"), @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expiry_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="button">
            <input type="submit" value="Update Events">
        </div>
        <div class="button">
            <input type="submit" value="Back" onclick="location.href='@Url.Action("ViewEvent", "Events")';return false;">
        </div>
    }
</div>