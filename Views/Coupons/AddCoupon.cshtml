@model pointage.Model.coupon
@{
    ViewBag.Title = "Create1";
    Layout = "~/Views/_AdminLayout.cshtml";
}


<div class="title">Create Coupon</div>
<div class="content">
    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken()
        <div class="user-details">
            <div class="input-box">
                <span class="details">Coupon Name</span>
                @Html.EditorFor(model => model.coupon_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Coupon Name" } })
                @Html.ValidationMessageFor(model => model.coupon_name, "", htmlAttributes: new { @class = "text-danger" })
                <span>@ViewBag.CouponExist</span>
            </div>
            <div class="input-box">
                <span class="details">Events</span>
                @Html.DropDownList("event_id", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="input-box">
                <span class="details">Discount</span>
                @Html.EditorFor(model => model.discount_val, new { htmlAttributes = new { @class = "form-control", placeholder = "Discount %" } })
                @Html.ValidationMessageFor(model => model.discount_val, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="button">
            <input type="submit" value="Create Coupon">
        </div>
        <div class="button">
            <input type="submit" value="Back" onclick="location.href='@Url.Action("ViewCoupon", "Coupons")';return false;">
        </div>
    }
</div>

